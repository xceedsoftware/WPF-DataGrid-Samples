<Application x:Class="Xceed.Wpf.DataGrid.Samples.Views3D.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
   <Application.Resources>

      <ResourceDictionary>

         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="AuxiliaryResources.xaml" />
         </ResourceDictionary.MergedDictionaries>

         <Style x:Key="parametersHostStyle"
                TargetType="ContentControl">
            <Setter Property="Margin"
                    Value="3" />

            <Setter Property="Focusable"
                    Value="False" />
         </Style>

         <Thickness x:Key="groupBoxMargin">2</Thickness>
         <Thickness x:Key="groupBoxPadding">3,8,3,3</Thickness>
         <Thickness x:Key="configItemMargin">0,0,0,4</Thickness>

         <Style TargetType="{x:Type Slider}">
            <Setter Property="AutoToolTipPlacement"
                    Value="TopLeft"/>

            <Setter Property="IsSnapToTickEnabled"
                    Value="True"/>
         </Style>
      </ResourceDictionary>
   </Application.Resources>
</Application>


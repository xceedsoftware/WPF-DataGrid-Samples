<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid">
   <Style TargetType="xcdg:CardflowView3D">
      <Setter Property="CameraZOffset"
              Value="-0.25"/>

      <Setter Property="CenterCardXAngle"
              Value="-25"/>

      <Setter Property="ShowReflections"
              Value="False"/>

      <Setter Property="SideCardsXAngle"
              Value="-25"/>

      <Setter Property="SideCardsXOffset"
              Value="1.5"/>

      <Setter Property="SideCardsXSpacing"
              Value="1.05"/>

      <Setter Property="SideCardsYAngle"
              Value="0"/>

      <Setter Property="SideCardsZOffset"
              Value="-3"/>

      <Setter Property="SideCardsZSpacing"
              Value="0.05"/>
   </Style>
</ResourceDictionary>

   <DataTemplate x:Key="themeDataTemplate"
                 DataType="{x:Type local:ThemeData}">
      <DockPanel>
         <ContentPresenter x:Name="newThemeDecoratorPresenter"
                           ContentTemplate="{StaticResource newThemeDecorator}"
                           Margin="2,1,0,0" 
                           DockPanel.Dock="Right"/>

         <StackPanel Orientation="Horizontal">
            <Border BorderThickness="1">

               <BulletDecorator Background="Transparent"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">

                  <BulletDecorator.Bullet>
                     <Grid Height="14"
                           Width="14">

                        <ContentPresenter ContentTemplate="{Binding Path=ImageDataTemplate}" />

                        <Border x:Name="border"
                                CornerRadius="15"
                                BorderBrush="#FF000000"
                                BorderThickness="1,1,1,1" />

                        <Path	Grid.Column="0"
